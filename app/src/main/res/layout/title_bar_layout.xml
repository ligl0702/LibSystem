<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:background="@color/common_green">

    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="44dip"
        android:paddingRight="44dip"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_xlarge" />

    <com.lll.library.view.layout.BackButton
        android:id="@+id/title_bar_back"
        style="@style/back_btn"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/title_bar_logo"
        style="@style/logo_style"
        android:src="@drawable/home_logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_bar_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:padding="10dp"
        android:src="@drawable/tips"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_xlarge" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/title_bar_divider" />

</RelativeLayout>